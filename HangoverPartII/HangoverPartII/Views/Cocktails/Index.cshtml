
@model IEnumerable<HangoverPartII.Models.Cocktail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr />

@foreach (var cocktail in Model)
{
    <div class="col-md-3">
        <b>@Html.DisplayFor(modelItem => cocktail.Title)</b>
        
        <p style="font-weight: bold"> @Html.DisplayFor(modelItem => cocktail.NetLikeCount) Likes</p>
        <p> @Html.ActionLink("Like", "Like", new { id = cocktail.Id })</p>
        <a href="@Url.Action("Details", "Cocktails", new { id = cocktail.Id })" class="col-md-3">
            <img style="border-radius: 65pt" src="@Url.Content(String.Format("~/Images/{0}", cocktail.Image))"
                 width="200" height="200" />
        </a>
    </div>


}
